<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.petrolingus.lim.Controller">
   <children>
      <HBox spacing="8.0">
         <children>
            <ImageView fx:id="imageView" fitHeight="800.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true" />
            <VBox>
               <children>
                  <StackPane fx:id="stackPane" prefHeight="400.0" prefWidth="800.0" />
                  <StackPane fx:id="stackPane1" prefHeight="400.0" prefWidth="800.0" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Max Steps" />
            <TextField fx:id="maxStepsField" />
            <Label text="Temperature" />
            <TextField fx:id="temperatureField" text="0.5" />
            <Button mnemonicParsing="false" onAction="#startButton" text="Button" />
         </children>
      </HBox>
   </children>
</VBox>
